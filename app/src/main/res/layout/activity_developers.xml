<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/border"
    tools:context=".Developers">

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write us at our mail:"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textStyle="bold" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:src="@drawable/asdfgh" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For any queries about app write your openion to us we always accept your words,click the below mail icon to write a feedback. "
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:textSize="20sp"
        android:textStyle="italic"/>

    <ImageView
        android:id="@+id/dmail"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:src="@drawable/mail"
        android:layout_marginTop="15sp"
        android:layout_gravity="center"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:background="@color/txt_color"
        android:layout_marginTop="10sp"
        tools:ignore="SmallSp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alumni of Computer Science Department-2020"
            android:textSize="15sp"
            android:layout_marginTop="15sp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Basaveshwar Science College Bagalkot)"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team Compan"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"/>

  </LinearLayout>

</ScrollView>
